<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_customer_information"
        android:layout_margin="32dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/customer_information"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="@string/customer_name"
        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/title_customer_information">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_customer_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="@string/address"
        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/til_customer_name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_customer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_customer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="@string/phone"
        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/til_customer_address">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_customer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/confirm"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@+id/til_customer_phone"/>

</androidx.constraintlayout.widget.ConstraintLayout>